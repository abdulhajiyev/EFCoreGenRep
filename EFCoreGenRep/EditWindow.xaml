<Window
    x:Class="EFCoreGenRep.EditWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:EFCoreGenRep"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="EditWindow"
    Width="400"
    ResizeMode="NoResize"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0">
            <Label Margin="10,0,0,0">Product name:</Label>
            <TextBox Height="25" Margin="10" />


            <Label Margin="10,0,0,0">Product category:</Label>
            <ComboBox Height="25" Margin="10" />

            <Label Margin="10,0,0,0">Product cost</Label>
            <TextBox Height="25" Margin="10" />
        </StackPanel>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Button
                Grid.Column="0"
                Height="25"
                Margin="10">
                OK
            </Button>
            <Button
                Grid.Column="1"
                Height="25"
                Margin="10">
                Cancel
            </Button>
        </Grid>
    </Grid>
</Window>
